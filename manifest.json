{
  "manifest_version": 3,
  "name": "Quiet Send",
  "version": "1.0.0",
  "description": "Save links while browsing and send them as weekly email digests to people you care about",
  "permissions": ["storage", "scripting", "activeTab", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "settings.html"
}